{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": ["stylelint-plugin-carbon-tokens"],
  "rules": {
    "max-nesting-depth": 5,
    "carbon/theme-token-use": [
      true,
      {
        "undefinedVariables": false
      }
    ],
    "selector-class-pattern": "[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}"
  }
}
